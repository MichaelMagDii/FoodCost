<Window x:Class="Food_Cost.ConnectionString"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Food_Cost"
        mc:Ignorable="d"
        Title="ConnectionString" Height="450" Width="800">
    <GroupBox Header="Connection string of POS" Margin="10 10 0 10" FontSize="20" TextBlock.FontWeight="Bold">
        <Grid>
            <StackPanel Orientation="Vertical">
            <TextBox Name="ConnectionsString" Width="700" Height="250" BorderBrush="Black" BorderThickness="5" />
                <Button Foreground="White" Background="Black" Margin="300,5,300,5" Click="Button_Click">Save</Button>
            </StackPanel>
        </Grid>
    </GroupBox>
</Window>
