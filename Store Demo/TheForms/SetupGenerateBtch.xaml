<Window x:Class="Food_Cost.TheForms.SetupGenerateBtch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Food_Cost.TheForms"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" Title="Setup Generate Btch" Height="300" Width="500">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Content="When Create Recipes you should Create Sub Recipes First !!"  VerticalAlignment="Center" Foreground="Red" />
        
        <ComboBox Grid.Column="1" HorizontalContentAlignment="Center" Name="Num_cbx" Margin="20">
            <ComboBoxItem Content="Yes"/>
            <ComboBoxItem Content="No"/>
        </ComboBox>

        <Button Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Gray" Click="Button_Click">save</Button>

    </Grid>
</Window>
