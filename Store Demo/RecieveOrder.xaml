                                        <Button Content="Add Item" Background="Gray" Margin="10" Name="AddItemBtn"  Click="AddBtn_Click" IsEnabled="False" />
                                        <Button Content="Delete Item" Name="DeleteItemBtn" Click="DeleteItemBtn_Click" Background="#cb4335" Margin="10" Grid.Column="1" IsEnabled="False"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <Grid Grid.Row="2" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>

                            </Grid.ColumnDefinitions>

                            <Button Foreground="Black" Background="#cacfd2"  FontSize="12" Padding="2" Margin="10,10,9.8,10" Click="NewWithoutBn_Click" Name="_NewBtn">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" Width="20"/>
                                    <TextBlock HorizontalAlignment="Right"> New</TextBlock>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1" Background="Green"  Name="REcivedWithoutBtn_Click" FontSize="12" Padding="2" Margin="10" Click="RecievedWithoutBtn_Click" IsEnabled="False">
                                <StackPanel Orientation="Horizontal"  >
                                    <materialDesign:PackIcon Kind="CheckboxMarkedCircle" Width="20" Height="20"/>
                                    <TextBlock HorizontalAlignment="Right"> Recieved</TextBlock>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2" FontSize="12" Padding="2" Margin="10"  IsEnabled="True" Click="Button_Click" Name="WithoutPoUndoBtn">
                                <StackPanel Orientation="Horizontal" >
                                    <materialDesign:PackIcon Kind="Undo"/>
                                    <TextBlock HorizontalAlignment="Right"> Undo</TextBlock>
                                </StackPanel>
                            </Button>

                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem Header="Requested Orders" FontSize="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28*"/>
                            <ColumnDefinition Width="251*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="8*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <GroupBox Name="RequestInfo" Visibility="Hidden" Header="requests Info" Margin="5" Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Request # *" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox Grid.Column="1" VerticalAlignment="Center" Foreground="Black"  Name="CodeRequesttxt" TextAlignment="Center" IsReadOnly="True"/>


                                <TextBlock Text="Manual Request # *" Grid.Column="2" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                <TextBox Grid.Column="3" VerticalAlignment="Center" Foreground="Black"  Name="ManualRequesttxt" TextAlignment="Center" IsReadOnly="True"/>



                                <TextBlock Text="Type" Foreground="Red" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox VerticalAlignment="Center" Grid.Column="5" Foreground="Black" Name="TypeCbx" TextBlock.TextAlignment="Center" IsReadOnly="True" HorizontalContentAlignment="Center"/>


                                <TextBlock Text="Request Date" Foreground="Red" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <DatePicker Name="Request_Date" Grid.Row="1" Grid.Column="1" Foreground="Black" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></DatePicker>


                                <TextBlock Text="Request Time" Foreground="Red" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden"/>
                                <materialDesign:TimePicker Name="Request_Time" Grid.Row="1" Grid.Column="3" Foreground="Black" HorizontalAlignment="Stretch" VerticalAlignment="Center" Visibility="Hidden"></materialDesign:TimePicker>

                                <TextBlock Text="Comments" Foreground="Black" Grid.Column="4" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox Grid.Column="5" VerticalAlignment="Center" Grid.Row="1"  Foreground="Black" Name="RequestCommenttxt"/>

                                <TextBlock Name="Status" Text="Status : *" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Red"/>
                                <ComboBox Grid.Column="3" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Foreground="Black" Name="StatusReq" HorizontalContentAlignment="Center">
                                    <ComboBoxItem IsSelected="True">Hold</ComboBoxItem>
                                    <ComboBoxItem>Rejected</ComboBoxItem>
                                    <ComboBoxItem>Approval</ComboBoxItem>
                                    <ComboBoxItem>Post</ComboBoxItem>
                                </ComboBox>

                                <Grid Name="toKItchenAndResturant" Visibility="Visible" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="To Resturant" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                    <TextBox Grid.Column="1" VerticalAlignment="Center" Foreground="Black" Name="TOResturantReq" IsReadOnly="True"/>

                                    <TextBlock Text="To Kitchen" Foreground="Black" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBox Grid.Column="3"  VerticalAlignment="Center" Foreground="Black" Name="TOKitchenReq" IsReadOnly="True"/>

                                </Grid>

                            </Grid>
                        </GroupBox>

                        <GroupBox Name="RequestChose" Visibility="Visible" Header="Kitchens" Margin="5" ToolTip="You should Chose Ressturant and kitchen Here!" Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock  Text="Resturant" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <ComboBox Grid.Column="1" VerticalAlignment="Center" Margin="0 0 5 0" Foreground="Black" Name="ResturantReqcbx" TextBlock.TextAlignment="Center" HorizontalContentAlignment="Center" SelectionChanged="ResturantReqcbx_SelectionChanged"/>

                                <TextBlock Text="Kitchen" Grid.Row="1" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                <ComboBox Grid.Column="1" Grid.Row="1" Margin="0 0 5 0" VerticalAlignment="Center"  Foreground="Black" Name="KitchenReqcbx" TextBlock.TextAlignment="Center" HorizontalContentAlignment="Center" SelectionChanged="KitchenReqcbx_SelectionChanged"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Items" Grid.Row="1" Margin="5" TextBlock.FontWeight="Bold" VerticalAlignment="Stretch" Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="9*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <DataGrid Name="RequestssDGV" ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding}" BorderBrush="Black" BorderThickness="1"
                                        ScrollViewer.HorizontalScrollBarVisibility="Auto" AutoGenerateColumns="True" ScrollViewer.CanContentScroll="True" CanUserAddRows="False" ColumnWidth="*" MouseDoubleClick="RequestssDGV_MouseDoubleClick">
                                </DataGrid>

                                <DataGrid Name="RequestsItemsDGV" ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding}" BorderBrush="Black" BorderThickness="1" CellEditEnding="RequestsItemsDGV_CellEditEnding"
                                        ScrollViewer.HorizontalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" AutoGenerateColumns="True" ScrollViewer.CanContentScroll="True" CanUserAddRows="False" ColumnWidth="*" Visibility="Hidden" MouseDoubleClick="RequestsItemsDGV_MouseDoubleClick">
                                </DataGrid>

                                <Grid Grid.Row="1" TextBlock.FontWeight="Normal">
                                    <StackPanel HorizontalAlignment="Left" Margin="10 5 0 0" Orientation="Horizontal">
                                        <Label Content="Number Of Items" VerticalAlignment="Center" Name="NumberOfItemTextReq" Visibility="Hidden"/>
                                        <TextBox BorderThickness="2" Width="100" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden" Foreground="Black" Name="NUmberOfItemsReq" IsReadOnly="True"/>

                                        <Label Content="Total Price :" VerticalAlignment="Center" Name="TotalofItemsReq" Visibility="Hidden"/>
                                        <TextBox BorderThickness="2" Width="100" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden" Foreground="Black" Name="Total_PriceReq" IsReadOnly="True"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="Remove Item" Name="RemoveItemBtn" Background="#cb4335" Visibility="Hidden" IsEnabled="False" Margin="10" Grid.Column="1" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <Grid Grid.Row="2" Grid.ColumnSpan="2">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Foreground="Black" Name="SearchReq" Background="#cacfd2" Margin="10" Visibility="Hidden" Click="SearchReq_Click" >
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Reply" Width="20"/>
                                    <TextBlock HorizontalAlignment="Right"> Search</TextBlock>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1" Grid.ColumnSpan="2" Foreground="Black" Name="Reply" Background="#cacfd2" Margin="10" Click="Reply_Click" IsEnabled="False" Visibility="Hidden">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Reply" Width="20"/>
                                    <TextBlock HorizontalAlignment="Right"> Reply</TextBlock>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="3" Margin="10" Name="UndoRequestBtn" Click="UndoRequestBtn_Click">
                                <StackPanel Orientation="Horizontal" >
                                    <materialDesign:PackIcon Kind="Undo"/>
                                    <TextBlock HorizontalAlignment="Right"> Undo</TextBlock>
                                </StackPanel>
                            </Button>

                        </Grid>

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </ScrollViewer>
</UserControl>