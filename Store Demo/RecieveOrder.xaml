                                        <Label Content="Total Price With Tax:" FontSize="15" VerticalAlignment="Center"/>
                                        <TextBox BorderThickness="2" Width="100" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="Black" Name="Total_Price_With_Tax" IsReadOnly="True"/>
                                    </StackPanel>

