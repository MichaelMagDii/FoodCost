<Window x:Class="Food_Cost.ItemsDefinitionSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Food_Cost"
        mc:Ignorable="d"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Items Definition Setup"  Height="400" Width="500" FontSize="20">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Number of Setup Items Parents "  VerticalAlignment="Center" Foreground="Red" />
        <ComboBox Grid.Column="1" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" Name="Num_cbx" Margin="20">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
        </ComboBox>

        <Button Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Gray" Click="Button_Click">save</Button>
    </Grid>
</Window>
